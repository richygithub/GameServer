<Window x:Class="Robot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid Name="MainGrid" HorizontalAlignment="Left" Height="225" Margin="29,56,0,0" VerticalAlignment="Top" Width="748" Background="Beige"/>

        <Button  Content ="Add" Name="btnAdd" HorizontalAlignment="Left" Height="21" Margin="38,315,0,0" VerticalAlignment="Top" Width="70" Click="BtnAdd_Click">
        </Button>

        <Button Name="btnStart" Content="Start" HorizontalAlignment="Left" Height="26" Margin="236,312,0,0" VerticalAlignment="Top" Width="70" Click="BtnStart_Click"/>
        <Button Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="475,315,0,0" VerticalAlignment="Top" Click="BtnStop_Click"/>

        <TextBox Name="Num" HorizontalAlignment="Left" Height="21" Margin="113,315,0,0" Text="10" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" PreviewTextInput ="NumberValidationTextBox"
                 />
        <ComboBox Name="testCase" HorizontalAlignment="Left" Height="23" Margin="323,315,0,0" VerticalAlignment="Top" Width="77"/>


    </Grid>
</Window>
